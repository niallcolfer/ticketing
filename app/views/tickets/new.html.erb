<div class="col-md-10 col-md-offset-2">
<%= form_for @ticket, html: { class: 'form-horizontal' }  do |f| %>

  <div class="form-group col-md-4">
    <%= f.label :assignee_id %>:
    <%= f.text_field :assignee_id, as: :search, class: 'form-control', data: { autocomplete_source: User.pluck(:email) } %>
  </div>

  <div class="form-group col-md-4">
    <%= f.label :reporter_id %>:
    <%= f.text_field :reporter_id, class: 'form-control' %>
  </div>

  <div class="form-group col-md-12">
    <%= f.label :subject %>:
    <%= f.text_field :subject, class: 'form-control' %>
  </div>

  <div class="form-group col-md-12">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', row: 4 %>
    <div class="form-group col-md-2">
      <%= f.label :status %>
      <%= f.select(:status_id, options_for_select(@ticket.statuses.map.with_index{|i, v| [i, v]}), {}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group col-md-2">
    <%= f.submit class: 'btn btn-primary form-control' %>
  </div>
<% end %>
</div>
